function c () {
  if [ $# -eq 0 ]; then
    local cmd="bundle exec cucumber"
  else
    local cmd="bundle exec cucumber $@ --require features"
  fi
  echo $cmd
  eval $cmd
}

function sp () {
  if [ $# -eq 0 ]; then
    local cmd="bundle exec rspec spec"
  else
    local cmd="bundle exec rspec $@"
  fi
  echo $cmd
  eval $cmd
}