### ALIASES
alias ak="ack -il"
alias akl="ack -i"
alias h="history"
alias ll="ls -laFh"
alias k='clear'
alias my='mysql -u root'
alias .a="$EDITOR ~/.aliases && source ~/.aliases"
alias .e="$EDITOR ~/.env && source ~/.env"
alias reload="source ~/.aliases && source ~/.env"
alias lip="lorem $* | pbcopy"
alias vi='vim'
alias rmf='rm -rf'
alias lsa='ls -a'
alias nyan='nc -v miku.acm.uiuc.edu 23 TERM=fallback'

# Editor
alias e=$EDITOR

# Git
alias ga='git add'
alias gaa='git add --all'
alias gau='git add --update'
alias gb='git branch'
alias gap='git add --patch'
alias gc='git commit'
alias gca='git commit -a'
alias gco='git checkout'
alias gd='git diff'
alias gdc='git dc'
alias gs='git status --short'
alias gsl='git status'
alias gpp='git pp'
alias gup='git smart-pull'
alias pull='git pull --rebase'
alias wtf='git-wtf'
alias glg='git lg'
alias glgcon='git log -p -S'
alias grh='git reset --hard'
alias df='git difftool'
alias kdf='git difftool -y -t Kaleidoscope'
alias gln='git log -n'
alias gst='git stash'
alias ks='ksdiff'
alias gitbox='open -a Gitbox'
function gg() {
  git commit -v -a -m "$*"
}

# Rails
alias r='rails'
alias rs='rails server'
alias rc='rails console'
alias rg='rails generate'
alias rr='touch tmp/restart.txt'
alias rn='rails new'
alias tl='tail -f'
alias migrate='rake db:migrate && rake db:test:prepare'
alias bx='bundle exec'
alias bi='bundle install'
alias bu='bundle update'
alias sp='rspec spec'

# Thor
alias th='thor'

alias serveit='ruby -run -e httpd -- -p 5000 .'
