[user]
  email = lbrapid@gmail.com
  name = John Dyer
[alias]
  ap = add --patch
  up = pull
  ci = commit
  st = status
  di = diff
  dic = diff --cached
  co = checkout
  br = branch
  sta = stash
  hist = log --decorate --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
  sd = svn dcommit
  tg = tag
  sr = svn rebase
  pp = !git pull --rebase && git push
  lg = log --decorate --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
  deploy = !git push && cap deploy
  wtf = !git-wtf
[color]
  ui = auto
[color "diff"]
    meta = blue bold
    frag = magenta bold
    old = red bold
    new = green bold

[color "branch"]
    current = yellow reverse
    local = yellow bold
    remote = green bold
    plain = red bold

[color "status"]
    added = yellow
    changed = green bold
    untracked = blue bold
[apply]
  whitespace = nowarn
[help]
  autocorrect = 1
[core]
  editor = mvim -f
  quotepath = false
  autocrif = input
  safecrif = true
  excludesfile = /Users/johnd/.gitignore_global
[difftool "Kaleidoscope"]
  cmd = ksdiff-wrapper git \"$LOCAL\" \"$REMOTE\"
[difftool]
  prompt = false
[diff]
  tool = Kaleidoscope
[branch]
  autosetuprebase = always

[merge]
    summary = true
    tool = "filemerge"
